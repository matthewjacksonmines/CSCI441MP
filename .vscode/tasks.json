{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active dir (MinGW)",
      "type": "shell",
      "command": "cmake --build build",
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": "$gcc",
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Kill active exe (win)",
      "type": "shell",
      "command": "taskkill /IM ${fileDirnameBasename}.exe /F",
      "problemMatcher": [],
      "presentation": { "reveal": "never", "echo": false },
      "runOptions": { "reevaluateOnRerun": false }
    }
  ]
}
